<!DOCTYPE html>
<html>
<head>
  <title>Reminders</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

    <nav class='navbar navbar-default'>
        <div class="container-fluid">
           <div class="navbar-header">
              <%= link_to 'DASHBOARD', root_path, :class => 'navbar-brand' %>
           </div>
          <div class='table'>
            <ul class='nav navbar-nav'>
                <li class='active'><%= link_to 'HOME', root_path %></li>
              <% if user_signed_in? %>
                <li class='active'><%= link_to 'MY REMINDERS', @reminder_index_path %></li>
              <% end %>
              <li class='active'><%= link_to 'NEW USER', new_user_session_path %></li>
              <li class='active'><%= link_to 'SIGN IN', user_session_path %></li>
              <li class='active'><%= link_to 'SIGN OUT', destroy_user_session_path %></li>
            </ul>
          </div>
        </div>
    </nav>

<div class='container'>
  <div class='row'>
    <div class='col-md-12'>
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
        <%= yield %>
    </div>
  </div>
</div>

</body>
</html>
